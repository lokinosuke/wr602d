{% extends 'base.html.twig' %}

{% block title %}Convertir une URL en PDF{% endblock %}

{% block body %}
    <h1>Convertir une URL en PDF</h1>
    <form action="{{ path('app_gotenberg_convert') }}" method="post">
        <label for="url">Entrez l'URL :</label><br>
        <input type="text" id="url" name="url" required><br><br>
        <button type="submit">Convertir en PDF</button>
    </form>
{% endblock %}