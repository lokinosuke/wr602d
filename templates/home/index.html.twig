{% extends 'base.html.twig' %}

{% block title %}Home!{% endblock %}

{% block body %}
<div class="min-h-[39rem] bg-white rounded-lg flex">
<div class="flex justify-center flex-col">
<div class="flex justify-center flex-col">
<h1 class="text-gray-900 text-6xl font-bold text-center">Convert any webpage into a PDF document effortlessly</h1>
<p class="text-gray-900 text-lg font-semibold pt-4 text-center">Powered by Symfony and Gotenberg</p>
</div>
{% if app.user %}
<div class="flex justify-center mt-10">
    <a href="{{ path('app_subscription') }}" class="flex items-center inline-block text-sm px-4 py-2 leading-none border rounded-full text-white bg-gray-900 mr-2 border-white hover:border-transparent hover:bg-gray-800 mt-4 lg:mt-0">Upgrade Your Subscription <ion-icon name="arrow-up-outline" class="text-2xl rotate-45"></ion-icon></a>
    <a href="{{ path('app_gotenberg') }}" class="flex items-center inline-block text-sm px-4 py-2 leading-none border rounded-full text-gray-900 bg-white ml-2 border-gray-900 hover:border-transparent hover:text-white hover:bg-gray-800 mt-4 lg:mt-0">Convert A New Pdf <ion-icon name="arrow-up-outline" class="text-2xl rotate-45"></ion-icon></a>
</div>
{% else %}
<div class="flex justify-center mt-10">
    <a href="{{ path('app_register') }}" class="flex items-center inline-block text-sm px-4 py-2 leading-none border rounded-full text-white bg-gray-900 mr-2 border-white hover:border-transparent hover:bg-gray-800 mt-4 lg:mt-0">Start Free Trial <ion-icon name="arrow-up-outline" class="text-2xl rotate-45"></ion-icon></a>
    <a href="{{ path('app_login') }}" class="flex items-center inline-block text-sm px-4 py-2 leading-none border rounded-full text-gray-900 bg-white mr-2 border-gray-900 hover:border-transparent hover:text-white hover:bg-gray-800 mt-4 lg:mt-0">Log In <ion-icon name="arrow-up-outline" class="text-2xl rotate-45"></ion-icon></a>
</div>
{% endif %}
</div>
    </div>
</div>
{% endblock %}
