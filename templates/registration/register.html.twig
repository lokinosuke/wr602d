{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Register
      </h2>
    </div>
    <form class="mt-8 space-y-6" method="POST">
      {{ form_errors(registrationForm) }}
      {{ form_start(registrationForm) }}
      <input type="hidden" name="_token" value="{{ csrf_token('register') }}">
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          {{ form_row(registrationForm.email, { 'attr': {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placeholder': 'Email address'} }) }}
        </div>
        <div>
          {{ form_row(registrationForm.lastname, { 'attr': {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placeholder': 'Last name'} }) }}
        </div>
        <div>
          {{ form_row(registrationForm.firstname, { 'attr': {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placeholder': 'First name'} }) }}
        </div>
        <div>
          {{ form_row(registrationForm.plainPassword, { 'attr': {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placeholder': 'Password'} }) }}
        </div>
        <div>
          {{ form_row(registrationForm.agreeTerms, { 'label': 'Agree to terms', 'attr': {'class': 'mt-2'} }) }}
        </div>
      </div>

      <div>
        <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          Register
        </button>
      </div>
      {{ form_end(registrationForm) }}
    </form>
    <p class="text-center text-sm text-gray-600 mt-4">
      Already have an account? <a href="{{ path('app_login') }}" class="font-medium text-indigo-600 hover:text-indigo-500">Login</a>
    </p>
  </div>
</div>
{% endblock %}
